# Trade Hedge Production Environment Variables
# Переменные окружения для production развертывания

# =================================
# DOCKER IMAGE
# =================================
TRADE_HEDGE_IMAGE=your-registry.com/trade-hedge:latest

# =================================
# DATABASE CONFIGURATION
# =================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=trade_hedge
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_MAX_CONNECTIONS=10
DB_CONNECTION_TIMEOUT=30

# =================================
# FREQTRADE API
# =================================
FREQTRADE_API_URL=http://your-freqtrade-server:8080
FREQTRADE_TIMEOUT=30

# =================================
# BYBIT API
# =================================
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here
BYBIT_API_URL=https://api.bybit.com
BYBIT_TIMEOUT=30

# =================================
# TRADING STRATEGY
# =================================
STRATEGY_POSITION_AMOUNT=100.0
STRATEGY_MAX_LOSS_PERCENT=3.0
STRATEGY_PROFIT_RATIO=0.8
STRATEGY_BASE_CURRENCY=USDT
STRATEGY_CHECK_INTERVAL=300

# =================================
# WEB UI
# =================================
WEBUI_ENABLED=true
WEBUI_HOST=0.0.0.0
WEBUI_PORT=8081

# =================================
# LOGGING (опционально)
# =================================
# LOG_LEVEL=info
# LOG_FORMAT=json
